{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe.
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card o-hidden border-0 shadow-lg my-5">
			<div
				class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-6 d-none d-lg-block bg-request-image"></div>
					<div class="col-lg-6">
						<div class="p-5 m-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-4">Modifier votre mot de passe.</h1>
							</div>
							{% for flash_error in app.flashes('reset_password_error') %}
								<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
							{% endfor %}


							{{ form_start(requestForm, {'attr': {'class': 'user'}}) }}
							<div class="form-group row">
								<div class="col-sm-6 mb-3 mb-sm-0"></div>
							</div>
							<div class="form-group">
								{{ form_widget(requestForm.email, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Adresse mail'}}) }}
							</div>
							<div>
								<small>
									Entrer votre adresse e-mail et nous vous enverrons un lien pour modifier votre mot de passe.
								</small>
							</div>
							<button type="submit" class="btn btn-primary btn-user btn-block">Envoyer votre demande de mdification.</button>

							{{ form_end(requestForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
