{% extends 'base.html.twig' %}

{% block title %}S'enregistrer
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card o-hidden border-0 shadow-lg my-5">
			<div
				class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
					<div class="col-lg-7">
						<div class="p-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-4">S'enregistrer</h1>
							</div>
							{% for flash_error in app.flashes('verify_email_error') %}
								<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
							{% endfor %}

							{{ form_start(registrationForm, {'attr': {'class': 'user'}}) }}
							<div class="form-group row">
								<div class="col-sm-6 mb-3 mb-sm-0"></div>
							</div>
							<div class="form-group">{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Adresse mail'}}) }}
							</div>
							<div class="form-group">{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-user','placeholder':'Mot de passe' }}) }}</div>
							<hr>
							<div class="row">
								<div class="col-6">
									<div class="form-group">{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Votre nom'}}) }}
									</div>
								</div>
								<div class="col-6">
									<div class="form-group">{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Votre prénom'}}) }}
									</div>
								</div>
							</div>

							<div class="row">
								<div class="form-group">{{ form_widget(registrationForm.rue, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Votre adresse'}}) }}
								</div>
							</div>

							<div class="row">
								<div class="col-6">
									<div class="form-group">{{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Votre ville'}}) }}
									</div>
								</div>
								<div class="col-6">
									<div class="form-group">{{ form_widget(registrationForm.cp, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Votre code postal'}}) }}
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-6">
									<div class="form-group">{{ form_widget(registrationForm.tel, {'attr': {'class': 'form-control form-control-user',
							'placeholder':'Numéro de téléphone'}}) }}
									</div>
								</div>
								<div class="col-6">
									<div class="form-group">{{ form_row(registrationForm.rgpd, {'attr': {'class': 'custom-checkbox','placeholder':'Accepter l\'enregistrement des donnnées' }}) }}</div></div>
</div>
							

							

							<button type="submit" class="btn btn-primary btn-user btn-block">S'enregistrer</button>
							{{ form_end(registrationForm) }}

										<hr>
										<div class="text-center">
											<a class="small" href="{{path('gp_forgot_password_request')}}">Mot de passe oublié ?</a>
										</div>
										<div class="text-center">
											<a class="small" href="{{path('gp_login')}}">Vous avez déjà un compte ? Se connecter</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
